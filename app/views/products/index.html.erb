<div class="container">
  <h1>Products#index</h1>
  
  <table class="table">
    <thead>
      <th>Stt</th>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Action</th>
    </thead>
    <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td>
          <% if product.image.attached?%>
            <%= link_to image_tag(product.image,style:"width:50px"),product %>
          <% end %>
        </td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "Edit", edit_product_path(product) %>
          <%= link_to "Delete", product, method: :delete, data: {confirm: "are ypu sure?"} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to 'Create product', new_product_path %>
  </div>
  <%= will_paginate @products %>
</div>