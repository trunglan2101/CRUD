<h1>Users#index</h1>

<table class="table table-success table-striped">
  <thead>
    <th>Stt</th>
    <th>Avatar</th>
    <th>Name</th>
    <th>Email</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to 'Delete', user, method: :delete, data: {confirm: "Are you sure?"} %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
