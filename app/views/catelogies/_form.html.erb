<%= form_for @catelogy do |f| %>
  <% @catelogy.errors.full_messages_for(:name).each do |msg| %>
    <%= msg %>
  <% end %><br>
  <% @catelogy.errors.full_messages_for(:description).each do |msg| %>
    <%= msg %>
  <% end %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

  <%= f.submit %>
<% end %>